<?xml version="1.0" encoding="utf-8" ?>
<model class="ewXform">
  <instance>
    <emailer>
      <oBodyXML>
        <Items>
          <ContactPumpApp label="Richiedo di essere contatto per discutere un' applicazione di pompaggio">NO</ContactPumpApp>
          <AppDesc label="Short description of the Application"></AppDesc>
          <SendCatalogue label="Please send me a catalogue of Hydra-Cell industrial pumps">NO</SendCatalogue>
          <Name></Name>
          <Company label="Company/Organisation"></Company>
          <Position label="Position/Job Title"></Position>
          <streetNumber></streetNumber>
          <Town></Town>
          <Country></Country>
          <Postcode></Postcode>
          <Telephone></Telephone>
          <Fax></Fax>
          <Email></Email>
        </Items>
      </oBodyXML>
      <xsltPath>/xsl/Email/mailform.xsl</xsltPath>
      <fromName></fromName>
      <fromEmail></fromEmail>
      <recipientEmail></recipientEmail>
      <bccRecipient></bccRecipient>
      <SubjectLine>Contact Form - WannerInt.com</SubjectLine>
    </emailer>
  </instance>
  <submission method="post" action="/ewCommon/Services.asmx" SOAPAction="http://www.eonic.co.uk/ewcommon/Services/emailer" id="send1"></submission>
  <bind id="emailer" nodeset="emailer">
    <bind id="oBodyXML" nodeset="oBodyXML/Items">
      <bind id="ContactPumpApp" nodeset="ContactPumpApp" required="false()" type="string"></bind>
      <bind id="AppDesc" nodeset="AppDesc" required="false()" type="string"></bind>
      <bind id="SendCatalogue" nodeset="SendCatalogue" required="false()" type="string"></bind>
      <bind id="Name" nodeset="Name" required="true()" type="string"></bind>
      <bind id="Company" nodeset="Company" required="false()" type="string"></bind>
      <bind id="Position" nodeset="Position" required="false()" type="string"></bind>
      <bind id="streetNumber" nodeset="streetNumber" required="true()" type="string"></bind>
      <bind id="Town" nodeset="Town" required="false()" type="string"></bind>
      <bind id="Country" nodeset="Country" required="false()" type="string"></bind>
      <bind id="Postcode" nodeset="Postcode" required="false()" type="string"></bind>
      <bind id="Telephone" nodeset="Telephone" required="false()" type="string"></bind>
      <bind id="Fax" nodeset="Fax" required="false()" type="string"></bind>
      <bind id="Email" nodeset="Email" required="true()" type="email"></bind>
    </bind>
    <bind id="Email" nodeset="fromEmail" required="true()" type="string"></bind>
    <bind id="Name" nodeset="fromName" required="true()" type="string"></bind>
    <bind id="mailto" nodeset="recipientEmail" required="false()" type="string"></bind>
    <bind id="subject" nodeset="SubjectLine" required="false()" type="string"></bind>
  </bind>
</model>
  <group>
  <label class="companyContactHeader">Anfordern Kontakt Aus Verder Deutschland GmbH</label>
  <input bind="mailto" class="hidden"></input>
  <input bind="subject" class="hidden"></input>
  <group>
    <label>Kontakt Anfrage</label>
    <select bind="ContactPumpApp" appearence="full" class="checkbox">
      <choices></choices>
      <item>
        <label>Bitte kontaktieren Sie mich, um meine Pumpen-Anwendung zu besprechen</label>
        <value>YES</value>
      </item>
    </select>
    <textarea bind="AppDesc" class="textarea" rows="4">
      <label>Bitte tragen Sie in das Feld eine kurze Beschreibung der Anwendung ein. Bitte erwähnen Sie darin das zu fördernde Medium, die benötigte Fördemenge und den Druck. Wenn Sie bereits eine andere Pumpe einsetzen oder eingesetzt haben, geben Sie bitte den Pumpentyp an.</label>
    </textarea>
  </group>
  <group>
    <label>Informations-Anfrage</label>
    <select bind="SendCatalogue" appearence="full" class="checkbox">
      <choices></choices>
      <item>
        <label>Bitte schicken Sie mir einen Prospekt zu den Hydra-Cell Industriepumpen</label>
        <value>YES</value>
      </item>
    </select>
  </group>
  <group class="2col">
    <label>Ihre Kontaktinformationen</label>
    <group>
      <input bind="Name" class="required">
        <label>Name</label>
      </input>
      <input bind="Position">
        <label>Position</label>
      </input>
      <input bind="Company" class="required">
        <label>Firma/Organisation</label>
      </input>
      <input bind="Telephone" class="required">
        <label>Telefon</label>
      </input>
      <input bind="Fax">
        <label>Fax</label>
      </input>
      <input bind="Email" class="required">
        <label>Email</label>
      </input>
    </group>
    <group>
      <input bind="streetNumber">
        <label>Straßennummer</label>
      </input>
      <input bind="Town">
        <label>Stadt</label>
      </input>
      <input bind="Country" class="required">
        <label>Land</label>
      </input>
      <input bind="Postcode">
        <label>PLZ</label>
      </input>
    </group>
  </group>
  <group>
    <submit submission="send1" bind="ewCmd" class="principle">
      <label>Anfrage senden</label>
    </submit>
  </group>
</group> ​
